<?xml version="1.0" encoding="utf-8"?>


<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_banner_height"
        android:layout_gravity="center"
        android:background="@drawable/title_bar_background"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_logo"
            android:layout_width="80px"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@mipmap/calibration_setting" />

        <!-- No and name -->

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/home_logo"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="标定值设置"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="calibration"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/clock_calibration"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            app:srcCompat="@mipmap/close_logo" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <!-- 回转角度标定 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/frame_border"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rotation_logo"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:srcCompat="@mipmap/rotation" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="X1:"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Y1:"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etx1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:text="X1"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/ety1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:text="Y1"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_rotate_coord1"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_rotate_coord1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="X2:"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Y2:"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etx2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:text="X2"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/ety2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:text="Y2"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_rotate_coord2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_rotate_coord2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="终止值"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_rotate_rate"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="1/mv"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>

            <!-- 回转档位标定  -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/frame_border">

                <ImageView
                    android:id="@+id/gear_shift_logo"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:srcCompat="@mipmap/gear_shift" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="8">

                    <Button
                        android:id="@+id/btn_first_gear"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="一档"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_first_gear"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10/s"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_gear2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="二挡"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_gear2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10/s"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_gear3"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="三挡"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_gear2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10/s"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_gear4"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="四挡"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_gear4"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10/s"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_gear5"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="五档"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_gear5"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10/s"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>

            <!-- 倾角标定  -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/frame_border">

                <ImageView
                    android:id="@+id/dip_angle_logo"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:srcCompat="@mipmap/di_angle" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/et_dip_angle_start"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_dip_angle_start"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_dip_angle_start"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/et_dip_angle_end"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_dip_angle_end"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_dip_angle_end"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="终止值"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_dip_angle_rate"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1/mv"
                        android:textSize="20dp" />
                </LinearLayout>
            </TableRow>

            <!-- 重量标定 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/frame_border">

                <ImageView
                    android:id="@+id/weight_logo"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:srcCompat="@mipmap/weight" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/et_weight_start"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_weight_start"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_weight_start"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/et_weight_end"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_weight_end"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_weight_end"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="终止值"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_weight_rate"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1/mv"
                        android:textSize="20dp" />
                </LinearLayout>
            </TableRow>

            <!-- 臂长 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/frame_border">

                <ImageView
                    android:id="@+id/clock_logo"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:srcCompat="@mipmap/range" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/et_arm_length_start"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_arm_length_start"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_arm_length_start"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="起始值"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/et_arm_length_end"
                        android:layout_width="0dp"
