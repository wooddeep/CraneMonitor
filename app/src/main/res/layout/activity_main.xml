                            app:srcCompat="@mipmap/forward" />

                        <TextView
                            android:id="@+id/forward_alarm_level"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="〇"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/back_alarm"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:rotation="270"
                            app:srcCompat="@mipmap/forward" />

                        <TextView
                            android:id="@+id/back_alarm_level"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="〇"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/left_alarm"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:rotation="0"
                            app:srcCompat="@mipmap/forward" />

                        <TextView
                            android:id="@+id/left_alarm_level"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="〇"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/right_alarm"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:rotation="180"
                            app:srcCompat="@mipmap/forward" />

                        <TextView
                            android:id="@+id/right_alarm_level"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="〇"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                    </TableRow>

                </TableLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>