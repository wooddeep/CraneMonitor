                    <ImageView
                        android:id="@+id/zoom_out"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/zoom_out" />

                </LinearLayout>

