<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_banner_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/spliter_background">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- No and name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No.:19026"
                    android:textColor="#506946" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCT16014A" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="5.0m/s" />

            <!-- calendar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:15:05"
                    android:textColor="#506946" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-04-27" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- main window for crane's cycle -->
        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <!--
            <com.wooddeep.crane.views.Polygon
                android:layout_width="300dp"
                android:layout_height="300dp" />
            -->

            <!--
            <com.wooddeep.crane.views.SuperCircleView
                android:id="@+id/superview1"
                android:layout_width="250px"
                android:layout_height="250px"
                android:background="#00000000"
                android:layout_marginLeft="50px"
                app:maxValue="100"
                app:min_circle_radio="100"
                app:ring_width="5"
                app:value="20" />

            <com.wooddeep.crane.views.SuperCircleView
                android:id="@+id/superview"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_marginLeft="150px"
                android:background="#00000000"
                app:maxValue="100"
                app:min_circle_radio="100"
                app:ring_width="5"
                app:value="20" />
            -->
            <Button
                android:id="@+id/adjust_hangle_add"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="大臂角度+"
                android:textColor="#506946" />
            <Button
                android:id="@+id/adjust_hangle_sub"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="大臂角度-"
                android:textColor="#506946" />

            <TextView
                android:id="@+id/distance_lable"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="200dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="距离"
                android:textColor="#506946" />

            <EditText
                android:id="@+id/distance"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:focusable="false"
                android:layout_marginLeft="240dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="#506946" />

            <TextView
                android:id="@+id/alarm_limit_lable"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="320dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="告警门限"
                android:textColor="#506946" />

            <EditText
                android:id="@+id/alarm_limit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="380dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="#506946" />

            <Button
                android:id="@+id/adjust_vangle_add"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="大臂倾角+"
                android:textColor="#506946" />
            <Button
                android:id="@+id/adjust_vangle_sub"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="100dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="大臂倾角-"
                android:textColor="#506946" />

        </FrameLayout>
        <!-- divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <!-- others -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <!-- 左边第一行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_height"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/t0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="13:15:05"
                            android:textColor="#506946" />
                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="13:15:05"
                            android:textColor="#506946" />
                    </LinearLayout>

                    <com.wooddeep.crane.views.SimpleProgressbar
                        android:id="@+id/spb"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/spliter_background"
                        android:progress="30" />

                </LinearLayout>
            </LinearLayout>

            <!-- 左边第二行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_height"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/t02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:text="13:15:05"
                            android:textColor="#506946" />
                    </LinearLayout>

                    <com.wooddeep.crane.views.SimpleProgressbar
                        android:id="@+id/spb2"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/spliter_background"
                        android:progress="30" />

                </LinearLayout>
            </LinearLayout>


            <!-- 左边第三行 共三列 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/green"
                android:orientation="horizontal">
                <!-- 第一列 -->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView310"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/image_height"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <com.wooddeep.crane.views.SimpleProgressbar
                        android:id="@+id/spb311"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="150dp"
                        android:rotation="90"
                        android:background="@drawable/spliter_background"
                        android:progress="30" />

                    <TextView
                        android:id="@+id/t312"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:text="13:15:05"
                        android:textColor="#506946" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="12"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@drawable/frame_border"
                        android:layout_margin="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="12"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageView3210"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/ic_launcher" />
                        <TextView
                            android:id="@+id/t3210"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="13:15:05"
                            android:textColor="#506946" />
                        <ImageView
                            android:id="@+id/imageView3213"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/ic_launcher" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView3214"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/ic_launcher" />
                    <ImageView
                        android:id="@+id/imageView3215"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/ic_launcher" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView320"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/image_height"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <com.wooddeep.crane.views.SimpleProgressbar
                        android:id="@+id/spb321"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="150dp"
                        android:rotation="90"
                        android:background="@drawable/spliter_background"
                        android:progress="30" />

                    <TextView
                        android:id="@+id/t332"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:text="13:15:05"
                        android:textColor="#506946" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>